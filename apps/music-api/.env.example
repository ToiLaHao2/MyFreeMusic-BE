# Server
PORT=3000
NODE_ENV=development

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=myfreemusic

# JWT
JWT_SECRET=your-super-secret-key-here
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Cloudinary (for album covers)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS
CORS_ORIGIN=http://localhost:5173

# Storage - absolute path to songs-storage folder
# Example: D:/My Repos/MyFreeMusic/MyFreeMusic-BE/apps/songs-storage
SONGS_STORAGE_PATH=

# Storage type: LOCAL, CLOUDFLARE_R2, S3
STORAGE_TYPE=LOCAL

# Cloudflare R2 Config (Required if STORAGE_TYPE=CLOUDFLARE_R2)
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=myfreemusic
R2_PUBLIC_URL=https://r2.your-custom-domain.com

# Storage limit in bytes (usage tracking, default 10GB)
# STORAGE_LIMIT_BYTES=10737418240
